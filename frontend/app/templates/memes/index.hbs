{{!-- MEMES START --}}

<div class="search-bar">
  {{input value=title placeholder="Search into the abyss"}}
</div>

<div id="masonry" class="memes">
{{#each model as |meme|}}
  {{#if (image-exists meme.image)}}
    <div class="panel">
      <div class="panel-content">
        {{#link-to "memes.show" meme}}
          <img class="meme" src={{full-url meme.image}}/>
        {{/link-to}}
      </div>
    </div>
  {{/if}}
{{/each}}
</div>
{{!-- MEMES END --}}